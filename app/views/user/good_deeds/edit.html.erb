<header>
<h1> Update Event</h1>
</header>

<section id="edit_deed">
  <%= form_with url: user_good_deed_path(@facade.deed_id), method: :patch, local: true do |f| %>
    <% deed = @facade.fetch_deed %>
    <h3><%= f.text_field :name, value: "#{deed.name}", read_only: true %></h3>
    <%= f.label :date %>
    <%= f.date_field :date, value: deed.date, min: Date.today %><br>
    <%= f.label :time %>
    <%= f.time_field :time, value: deed.time %><br>
    <%# @facade.fetch_deed.attendees.each do |attendee| %>
      <%#= f.label :attendee, value: attendee.name %>
    <%# end %>
    <%= f.check_box :status %>
    <%= f.label :status, "Completed" %><br>
    <%= f.label :notes %>
    <%= f.text_area :notes %><br>
    <%= f.label :media_link %>
    <%= f.file_field :media_link %><br>
    <%= f.submit "Update Event" %>
  <% end %>
</section>
<br>
<br>
<nav id="delete_deed">
  <%= link_to "Delete Event", user_good_deed_path(@facade.deed_id), method: :delete %>
</nav>